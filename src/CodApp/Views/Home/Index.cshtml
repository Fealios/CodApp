@model Dictionary<string, CodApp.Models.Article>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @if (User.Identity.IsAuthenticated)
    {
      <div class="jumbotron">
      <h3>@Html.ActionLink("Edit This Page", "EditHome")</h3>
      <br>
      @using (Html.BeginForm("Logoff", "Administrator"))
      {
        <input type="submit" value="Log Out" class="btn btn-warning" />
      }
    </div>
      <hr>
    }
    <div class="splash-image banner-image">
        <div class="splash-title">
          <h2>@Model["Banner"].Title</h2>
          <hr>
          <p>
            @Model["Banner"].Content
          </p>
        </div>
        <img src="@Model["Banner"].ImageSrcString" alt="A banner image" />
    </div>
    <div class="row">
        <div class="container">
            <div class="lead-marketing-section">
                <h1> --- @Model["Tagline"].Title ---</h1>
                <hr>
                <p>
                    @Model["Tagline"].Content
                </p>
            </div>
        </div>
    </div>
    <div class="content-container">
      <div class="container">
        <div class="row">
          <div class="blurb1">
            <div class="col-sm-6">
              <h3>@Model["Blurb1"].Title</h3>
              <p>
                @Model["Blurb1"].Content
              </p>
            </div>
            <div class="col-sm-6">
              <div class="rounded detail-image">
                <img src="@Model["Blurb1"].ImageSrcString" alt="A picture relating to fish" />
              </div>
            </div>
          </div>
        </div>
        <div class="row bump">
          <div class="splash-title">
            <h1>@Model["Banner2"].Title</h1>
          </div>
          <div class="mini-banner">
            <img src="@Model["Banner2"].ImageSrcString" alt="A banner image" />
          </div>
        </div>
        <br>
        <hr>
        <div class="row">
          <div class="blurb1">
            <div class="col-sm-6">
              <h3>@Model["Blurb2"].Title</h3>
              <p>
                @Model["Blurb2"].Content
              </p>
            </div>
            <div class="col-sm-6">
              <div class="bump">
                <img src="@Model["Blurb2"].ImageSrcString" alt="A picture relating to fish" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="mini-content">
              <div class="text-content">
                <h3>@Model["Blurb3"].Title</h3>
                <p>
                  @Model["Blurb3"].Content
                </p>
              </div>
                <img src="@Model["Blurb3"].ImageSrcString" alt="More pictures!" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="mini-content">
              <div class="text-content">
                <h3>@Model["Blurb4"].Title</h3>
                <p>
                  @Model["Blurb4"].Content
                </p>
              </div>
                <img src="@Model["Blurb4"].ImageSrcString" alt="More pictures!" />
            </div>
        </div>
    </div>
</div>
<div class="bottom-banner">
  <div class="container">
    <div class="banner-image">
      <img src="@Model["Banner3"].ImageSrcString" alt="A banner image" />
    </div>
  </div>
</div>
<div class="bottom-bar">
  <p>
    Some | Handy | Words!
  </p>
</div>
